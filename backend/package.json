{
  "name": "dom-v2-backend",
  "version": "2.0.0",
  "description": "Backend DOM v2 - Node.js + Express + TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server-prisma.js",
    "dev": "nodemon src/server-prisma.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest api-endpoints.test.ts",
    "test:controllers": "jest controllers.test.ts",
    "test:all": "jest --verbose --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "dom",
    "v2",
    "backend",
    "express",
    "typescript"
  ],
  "author": "DOM Team v2",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "nodemon": "^3.0.2",
    "prisma": "^6.12.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0"
  }
}
